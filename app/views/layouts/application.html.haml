!!! 5
%html
  %head
    %title 高専カンファレンスエフェクト #kosenconf
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    %script{ :type => "text/javascript", :src => "http://s.hatena.ne.jp/js/HatenaStar.js" }
    :javascript
      Hatena.Star.SiteConfig = {
        entryNodes: {
          'div.effect-board': {
            uri: '.body .url a',
            title: '.body .url a',
            container: '.social-widgets .hatena-star'
          }
        }
      };
    :javascript
      var embedlyApiKey = "#{Settings.embedly.api_key}";
    = csrf_meta_tags

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %h1
            = link_to "高専カンファレンスエフェクト", root_path, :class => "brand"
          %ul.nav
            %li
              = link_to "このサイトについて", about_path
          - if signed_in?
            %ul.nav.pull-right
              %li
                = link_to image_tag(current_user.icon_url, :size => "20x20"), current_user
              %li.dropdown
                %a.dropdown-toggle{ "data-toggle" => "dropdown", "href" => "#" }
                  メニュー
                  %b.caret
                %ul.dropdown-menu
                  %li
                    = link_to current_user do
                      %i.icon-home
                      マイページ
                  %li
                    = link_to new_effect_path do
                      %i.icon-fire
                      エフェクトを登録する
                  %li
                    = link_to new_event_path do
                      %i.icon-calendar
                      イベントを登録する
                  %li.divider
                  %li
                    = link_to sign_out_path, :method => :delete, do
                      %i.icon-signout
                      サインアウト
          - else
            %ul.nav.pull-right
              %li
                = link_to sign_in_path do
                  %i.icon-twitter-sign
                  Twitterアカウントでサインイン

    #main
      .container
        = yield

    %footer
      .container
        = render :partial => "welcome/widgets"
        %p
          = Time.now.year
          Team KCEffect
