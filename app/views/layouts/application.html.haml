!!! 5
%html
  %head
    %title 高専カンファレンスエフェクト #kosenconf
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    %script{ :type => "text/javascript", :src => "http://s.hatena.ne.jp/js/HatenaStar.js" }
    :javascript
      Hatena.Star.SiteConfig = {
        entryNodes: {
          'div.effect-board': {
            uri: '.body .url a',
            title: '.body .url a',
            container: '.social-widgets .hatena-star'
          }
        }
      };
    :javascript
      var embedlyApiKey = "#{Settings.embedly.api_key}";
    = csrf_meta_tags

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %h1
            = link_to "高専カンファレンスエフェクト", root_path, :class => "brand"
          %ul.nav
            %li
              = link_to "このサイトについて", about_path
          %ul.nav.pull-right
            - if signed_in?
              %li.user-icon
                = link_to image_tag(current_user.icon_url, :size => "20x20"), current_user
              %li
                = link_to current_user.name, current_user
              %li
                = link_to "サインアウト", sign_out_path, :method => :delete
            - else
              %li
                = link_to "サインイン", sign_in_path

    #main
      .container
        = yield

    %footer
      .container
        = render :partial => "welcome/widgets"
        %p
          = Time.now.year
          Team KCEffect
